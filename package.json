{
  "name": "react-use-context-menu",
  "version": "0.1.4",
  "description": "React hook for managing custom context menus!",
  "main": "dist/react-use-context-menu.js",
  "module": "dist/react-use-context-menu.m.js",
  "source": "src/index.ts",
